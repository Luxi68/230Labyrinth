<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProfileSelectionController">
	<MenuBar VBox.vgrow="NEVER">
		<Menu mnemonicParsing="false" text="File">
			<MenuItem mnemonicParsing="false" text="New" />
			<MenuItem mnemonicParsing="false" text="Open…" />
			<Menu mnemonicParsing="false" text="Open Recent" />
			<SeparatorMenuItem mnemonicParsing="false" />
			<MenuItem mnemonicParsing="false" text="Close" />
			<MenuItem mnemonicParsing="false" text="Save" />
			<MenuItem mnemonicParsing="false" text="Save As…" />
			<MenuItem mnemonicParsing="false" text="Revert" />
			<SeparatorMenuItem mnemonicParsing="false" />
			<MenuItem mnemonicParsing="false" text="Preferences…" />
			<SeparatorMenuItem mnemonicParsing="false" />
			<MenuItem mnemonicParsing="false" text="Quit" />
		</Menu>
		<Menu mnemonicParsing="false" text="Help">
			<MenuItem mnemonicParsing="false" text="About MyHelloApp" />
		</Menu>
	</MenuBar>
	<AnchorPane VBox.vgrow="ALWAYS">
		<Button layoutX="477.0" layoutY="58.0" mnemonicParsing="false" onAction="#goToCreateProfile" text="Create New Profile" textFill="#38ae1b" />
		<Button layoutX="461.0" layoutY="132.0" mnemonicParsing="false" onAction="#viewProfileInformation" text="View Profile Information" />
		<Button layoutX="577.0" layoutY="330.0" mnemonicParsing="false" onAction="#backToStartScreen" text="Back" />
      <Button layoutX="495.0" layoutY="172.0" mnemonicParsing="false" onAction="#goToLeaderboard" text="Leaderboard" />
      <ListView fx:id="profileList" layoutX="14.0" layoutY="58.0" prefHeight="296.0" prefWidth="438.0" />
      <Label layoutX="277.0" layoutY="14.0" text="PROFILES" textFill="#c37208">
         <font>
            <Font name="System Bold" size="31.0" />
         </font>
      </Label>
      <Button layoutX="493.0" layoutY="96.0" mnemonicParsing="false" onAction="#deleteFile" text="Delete Profile" textFill="#e10505">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
	</AnchorPane>
</VBox>
