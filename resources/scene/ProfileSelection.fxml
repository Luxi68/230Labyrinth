<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ProfileSelectionController">
   <MenuBar>
      <menus>
         <Menu mnemonicParsing="false" text="File">
            <items>
               <MenuItem mnemonicParsing="false" onAction="#quitGameFromMenu" text="Quit" />
            </items>
         </Menu>
         <Menu mnemonicParsing="false" text="Help">
            <items>
               <MenuItem mnemonicParsing="false" onAction="#openGameInstructions" text="How to play the game" />
            </items>
         </Menu>
         <Menu mnemonicParsing="false" text="Volume Control">
            <items>
               <MenuItem mnemonicParsing="false" text="Background Music">
                  <graphic>
                     <Slider fx:id="volumeSlider" />
                  </graphic>
               </MenuItem>
            </items>
         </Menu>
      </menus>
   </MenuBar>
	<AnchorPane VBox.vgrow="ALWAYS">
		<Button layoutX="477.0" layoutY="58.0" mnemonicParsing="false" onAction="#goToCreateProfile" text="Create New Profile" textFill="#38ae1b" />
		<Button layoutX="461.0" layoutY="132.0" mnemonicParsing="false" onAction="#viewProfileInformation" text="View Profile Information" />
		<Button layoutX="577.0" layoutY="330.0" mnemonicParsing="false" onAction="#backToStartScreen" text="Back" />
      <Button layoutX="495.0" layoutY="172.0" mnemonicParsing="false" onAction="#goToLeaderboard" text="Leaderboard" />
      <ListView fx:id="profileList" layoutX="14.0" layoutY="58.0" prefHeight="296.0" prefWidth="438.0" />
      <Label layoutX="277.0" layoutY="14.0" text="PROFILES" textFill="#c37208">
         <font>
            <Font name="System Bold" size="31.0" />
         </font>
      </Label>
      <Button layoutX="493.0" layoutY="96.0" mnemonicParsing="false" onAction="#deleteFile" text="Delete Profile" textFill="#e10505">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
	</AnchorPane>
</VBox>
