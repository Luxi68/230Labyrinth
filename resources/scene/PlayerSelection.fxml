<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PlayerSelectionController">
   <children>
      <Button layoutX="54.0" layoutY="249.0" mnemonicParsing="false" onAction="#twoPlayersSelected" text="2 Players" />
      <Button layoutX="487.0" layoutY="249.0" mnemonicParsing="false" onAction="#fourPlayersSelected" text="4 Players" />
      <Button layoutX="263.0" layoutY="249.0" mnemonicParsing="false" onAction="#threePlayersSelected" text="3 Players" />
      <Label layoutX="129.0" layoutY="37.0" text="Please Select Number Of Players" textFill="#d76814">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <Button layoutX="537.0" layoutY="359.0" mnemonicParsing="false" onAction="#backToStartScreen" text="Back" />
      <MenuBar prefHeight="29.0" prefWidth="600.0">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#quitGameFromMenu" text="Quit" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#openGameInstructions" text="How to play the game" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Volume Control">
               <items>
                  <MenuItem mnemonicParsing="false" text="Background Music">
                     <graphic>
                        <Slider fx:id="volumeSlider" />
                     </graphic>
                  </MenuItem>
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <ImageView fitHeight="133.0" fitWidth="130.0" layoutX="27.0" layoutY="95.0" pickOnBounds="true">
         <image>
            <Image url="/assets/numerlTwo.png" />
         </image></ImageView>
      <ImageView fitHeight="133.0" fitWidth="130.0" layoutX="236.0" layoutY="95.0" pickOnBounds="true">
         <image>
            <Image url="/assets/numeralThree.png" />
         </image></ImageView>
      <ImageView fitHeight="150.0" fitWidth="130.0" layoutX="456.0" layoutY="87.0" pickOnBounds="true">
         <image>
            <Image url="/assets/numeralFour.png" />
         </image></ImageView>
   </children>
</AnchorPane>
